<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity"
    android:background="@drawable/bg1"
    android:orientation="vertical"
    android:gravity="center">


    <TextView
        android:id="@+id/topname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="南华集团"
        android:textColor="@android:color/black"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/loginImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip" />

    <EditText
        android:id="@+id/username"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_marginTop="30dip"
        android:hint="@string/phone_input"
        android:inputType="phone"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:singleLine="true"
        android:maxLength="30"
        android:textColorHighlight="#7e4d84"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:background="@drawable/txtborder"
        android:paddingRight="2dp"/>
    <EditText
        android:id="@+id/password"
        android:hint="@string/pwd_input"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_marginTop="30dip"
        android:inputType="textPassword"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:background="@drawable/txtborder"
        android:paddingRight="2dp"/>
    <Button
        android:id="@+id/loginbtn"
        android:layout_width="150dip"
        android:layout_height="45dip"
        android:layout_marginTop="20dip"
        android:text="登录"
        android:gravity="center"
        android:background="@drawable/bg_border1"
        />
    <Button
        android:id="@+id/changepwdbtn"
        android:layout_width="150dip"
        android:layout_height="45dip"
        android:layout_marginTop="20dip"
        android:text="修改密码"
        android:gravity="center"
        android:background="@drawable/bg_border1"
        />

</LinearLayout>